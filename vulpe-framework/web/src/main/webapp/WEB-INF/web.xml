<?xml version="1.0"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<description>@project.description@</description>

	<!-- APP General Configuration -->
	<context-param>
		<param-name>project.package</param-name>
		<param-value>@project.package@</param-value>
	</context-param>

	<!-- Spring Configuration Parameters -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value></param-value>
	</context-param>
	<context-param>
		<param-name>locatorFactorySelector</param-name>
		<param-value>classpath*:beanRefContext.xml</param-value>
	</context-param>
	<context-param>
		<param-name>parentContextKey</param-name>
		<param-value>mainApplicationContext</param-value>
	</context-param>

	<!-- APP Initialization Listener -->
	<listener>
		<listener-class>org.vulpe.controller.listeners.VulpeStartupListener</listener-class>
	</listener>

	<!-- Spring Initialization Listener -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Spring Security Listener -->
	<listener>
		<listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
	</listener>

	<!-- Session Timeout : 30 minutes -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<!-- Sitemesh Filter -->
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
	</filter>

	<!-- Spring Security Filter -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<!-- Spring Filter to control EntityManager -->
	<filter>
		<filter-name>JpaFilter</filter-name>
		<filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
	</filter>

	<!-- Struts2 Filter -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.vulpe.controller.struts.dispatcher.VulpeFilterDispatcher</filter-class>
		<!-- struts.configuration.files -->
	</filter>

	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<!-- Spring Security Filter Mapping -->
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Spring Filter Mapping to control EntityManager -->
	<filter-mapping>
		<filter-name>JpaFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Struts2 Filter Mapping -->
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- APP Welcome Page -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- Tags Configuration  -->
	<jsp-config>
		<taglib>
			<taglib-uri>/struts-tags</taglib-uri>
			<taglib-location>/WEB-INF/tlds/struts-tags.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/tlds/c.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
			<taglib-location>/WEB-INF/tlds/fmt.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/functions</taglib-uri>
			<taglib-location>/WEB-INF/tlds/fn.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>/WEB-INF/util</taglib-uri>
			<taglib-location>/WEB-INF/tlds/util.tld</taglib-location>
		</taglib>
	</jsp-config>

	<error-page>
		<!-- Bad Request -->
		<error-code>400</error-code>
		<location>/WEB-INF/protected-jsp/commons/errors/400.jsp</location>
	</error-page>
	<error-page>
		<!-- Unauthorized -->
		<error-code>401</error-code>
		<location>/WEB-INF/protected-jsp/commons/errors/401.jsp</location>
	</error-page>
	<error-page>
		<!-- Forbidden -->
		<error-code>403</error-code>
		<location>/WEB-INF/protected-jsp/commons/errors/403.jsp</location>
	</error-page>
	<error-page>
		<!-- Not Found -->
		<error-code>404</error-code>
		<location>/WEB-INF/protected-jsp/commons/errors/404.jsp</location>
	</error-page>
	<error-page>
		<!-- Request Timeout -->
		<error-code>408</error-code>
		<location>/WEB-INF/protected-jsp/commons/errors/408.jsp</location>
	</error-page>
	<error-page>
		<!-- Internal Server Error -->
		<error-code>500</error-code>
		<location>/WEB-INF/protected-jsp/commons/errors/500.jsp</location>
	</error-page>
	<error-page>
		<!-- Service Unavailable -->
		<error-code>503</error-code>
		<location>/WEB-INF/protected-jsp/commons/errors/503.jsp</location>
	</error-page>
	<error-page>
		<!-- Generic Error -->
		<exception-type>java.lang.Exception</exception-type>
		<location>/WEB-INF/protected-jsp/commons/error.jsp</location>
	</error-page>

	<resource-ref>
		<res-ref-name>jdbc/@project.name@</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
</web-app>