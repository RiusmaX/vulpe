#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>${package}</groupId>
	<artifactId>${rootArtifactId}-core</artifactId>
	<version>${version}</version>
	<packaging>jar</packaging>
	<name>${rootArtifactId} - Core</name>

	<dependencies>
		<dependency>
			<groupId>${package}</groupId>
			<artifactId>${rootArtifactId}-domains</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.plugin.classpath" />
								<property name="tools.dir" value="${symbol_dollar}{settings.localRepository}/org/vulpe/vulpe-fox/1.0.2.API3/vulpe-fox-1.0.2.API3/tools" />
								<property name="tools.dir.present" value="false" />
								<available file="${symbol_dollar}{tools.dir}" property="tools.dir.present" type="dir" />
								<if>
									<equals arg1="${symbol_dollar}{tools.dir.present}" arg2="false" />
									<then>
										<unjar src="${symbol_dollar}{settings.localRepository}/org/vulpe/vulpe-fox/1.0.2.API3/vulpe-fox-1.0.2.API3.jar" dest="${symbol_dollar}{settings.localRepository}/org/vulpe/vulpe-fox/1.0.2.API3/vulpe-fox-1.0.2.API3" />
									</then>
								</if>
							</target>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>org.apache.ant</groupId>
						<artifactId>ant-nodeps</artifactId>
						<version>1.8.1</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>apt-maven-plugin</artifactId>
				<configuration>
					<factory>org.vulpe.fox.apt.freemarker.VulpeFreemarkerProcessorFactory</factory>
					<options>
						<param>template=${symbol_dollar}{settings.localRepository}/org/vulpe/vulpe-fox/1.0.2.API3/vulpe-fox-1.0.2.API3/tools/services/templates/plugin.ftl</param>
						<param>component=core</param>
						<param>package=${package}.core.model</param>
						<param>services=EJB3</param>
						<param>serviceLookup=spring</param>
						<param>applicationServer=${symbol_dollar}{deployServer}</param>
					</options>
					<sourceOutputDirectory>${symbol_dollar}{basedir}/generated/main/java</sourceOutputDirectory>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>net.sf.apt-jelly</groupId>
						<artifactId>apt-jelly</artifactId>
						<version>2.3</version>
					</dependency>
					<dependency>
						<groupId>freemarker</groupId>
						<artifactId>freemarker</artifactId>
						<version>2.3.8</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>process</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<configuration>
					<sources>
						<source>${symbol_dollar}{basedir}/generated/main/java</source>
						<source>${symbol_dollar}{basedir}/generated/main/resources</source>
					</sources>
				</configuration>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
