#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
        <artifactId>${rootArtifactId}</artifactId>
        <groupId>${groupId}</groupId>
        <version>${version}</version>
    </parent>

	<groupId>${package}</groupId>
	<artifactId>${rootArtifactId}-domains</artifactId>
	<version>${version}</version>
	<packaging>jar</packaging>
	<name>${rootArtifactId} - Domains</name>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>unjar-fox</id>
						<phase>validate</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.plugin.classpath" />
								<property name="tools.dir" value="${symbol_dollar}{settings.localRepository}/org/vulpe/vulpe-fox/1.0/vulpe-fox-1.0/tools" />
								<property name="tools.dir.present" value="false" />
								<available file="${symbol_dollar}{tools.dir}" property="tools.dir.present" type="dir" />
								<if>
									<equals arg1="${symbol_dollar}{tools.dir.present}" arg2="false" />
									<then>
										<unjar src="${symbol_dollar}{settings.localRepository}/org/vulpe/vulpe-fox/1.0/vulpe-fox-1.0.jar" dest="${symbol_dollar}{settings.localRepository}/org/vulpe/vulpe-fox/1.0/vulpe-fox-1.0" />
									</then>
								</if>
							</target>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>org.apache.ant</groupId>
						<artifactId>ant-nodeps</artifactId>
						<version>1.8.1</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>apt-maven-plugin</artifactId>
				<configuration>
					<factory>org.vulpe.fox.manager.ManagerProcessorFactory</factory>
					<options>
						<param>template=${symbol_dollar}{settings.localRepository}/org/vulpe/vulpe-fox/1.0/vulpe-fox-1.0/tools/manager/templates/plugin.ftl</param>
					</options>
					<sourceOutputDirectory>${symbol_dollar}{basedir}/../</sourceOutputDirectory>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.vulpe</groupId>
						<artifactId>vulpe-fox</artifactId>
						<version>1.0</version>
						<exclusions>
							<exclusion>
								<groupId>com.sun</groupId>
								<artifactId>tools</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>xml-apis</groupId>
						<artifactId>xml-apis</artifactId>
						<version>1.3.03</version>
					</dependency>
					<dependency>
						<groupId>${package}</groupId>
						<artifactId>${rootArtifactId}-commons</artifactId>
						<version>${version}</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>process</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>